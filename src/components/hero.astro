---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Grefusa Freshpower
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Apostem per una solució ideal per a joves que busquen energia natural per a rendir al màxim en les seves activitats físiques, amb un producte saludable i modern.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://www.canva.com/design/DAGXGerNRJI/-yITFRKBLwk72AyW6cDgng/edit?utm_content=DAGXGerNRJI&utm_campaign=designshare&utm_medium=link2&utm_source=sharebutton"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-lineicons:canva" />

         Presentació Freshpower
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://www.canva.com/design/DAGUNyiwE8U/Pme8CcPsHq9ZG77LE7CkTA/edit?utm_content=DAGUNyiwE8U&utm_campaign=designshare&utm_medium=link2&utm_source=sharebutton"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-devicon:canva" />
         Presentació Grefusa
      </Link>
    </div>
  </div>
</main>
